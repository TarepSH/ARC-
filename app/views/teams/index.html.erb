
<div class="row">
<div class="col-md-6 col-xs-12">
<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">Line Race Teams</div>
  <!-- Table -->
  <div class="table-responsive">
<table class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Team Group</th>
      <th>Team name</th>
      <th>Team school</th>
      <th>Team category</th>
      <th>Team point</th>
      <th>Game Play</th>
      <th>Best time</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @line_race_teams.each_with_index do |team, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= team.team_group %></td>
        <td><%= team.team_name %></td>
        <td><%= team.team_school %></td>
        <td><%= team.team_category %></td>
        <td><%= team.team_point %></td>
        <td><%= team.games_play %>/3</td>
        <td><%= team.best_time %></td>
           <% if current_user %>
        <td><%= link_to 'Show', team, class:"btn btn-default"%></td>
            <% end %>
      </tr>
    <% end %>

  </tbody>
</table>
</div>
<br>
</div>
</div>

